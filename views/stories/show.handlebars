<div class="row">
  <div class="col s12 m9">
    <h3>{{story.title}}</h3>
    <div class="card story green lighten-5">
      <div class="card-content">
        <span class="card-title">{{formatDate story.date 'MMMM Do YYYY'}}</span>
        {{{story.body}}}
      </div>
    </div>
  </div>

 <div class="col s12 m3">
    <div class="card center-align">
      <div class="card-content cevadiv green accent-4">
        <span class="card-title">{{story.user.firstName}} {{story.user.lastName}}</span>
        <img class="circle responsive-img" src="{{story.user.image}}">
      </div>
      <div class="card-action deep-purple lighten-2">
        <a href="/stories/user/{{story.user.id}}"> see more from {{story.user.firstName}}</a>
      </div>
    </div>
  </div>


</div>

 