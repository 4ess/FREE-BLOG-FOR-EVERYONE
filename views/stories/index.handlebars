<h1>PubLogs</h1>
<div class="row">
  {{#each stories}}
  <div class="col s12 m4">
    <div class="card">
      <div class="card-image">
        <a href="/stories/edit/{{id}}" class="btn-floating halfway-fab  teal accent-4">
          <i class="fa fa-pencil"></i>
        </a>
      </div>
      <div class="card-content center-align green lighten-5">
        <h5>{{title}}</h5>
        <p class="story-text">{{stripTags (truncate body 150)}}</p>
        <br>
        <div class="chip">
          <img src="{{user.image}}"> {{user.firstName}} {{user.lastName}}
        </div>
      </div>
      <div class="card-action center-align purple lighten-5">
        <a class="btn deep-purple lighten-2" href="/stories/show/{{id}}">
          <i class="fa fa-angle-double-right"></i>&nbsp;Read  
          <i class="fa fa-angle-double-left"></i>
        </a>
      </div>
    </div>
  </div>
  {{else}}
  <p>No PubLogs found</p>
  {{/each}}
</div>